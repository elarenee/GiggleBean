<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/tabletbg">

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignLeft="@+id/restart"
        android:layout_alignStart="@+id/restart"
        android:layout_alignParentBottom="true">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LED&apos;s On"
            android:id="@+id/btnOn"
            android:layout_gravity="left"
            android:background="@drawable/lightsbtn"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="400dp"
            android:layout_marginTop="250dp"
            android:layout_marginRight="400dp"
            android:layout_marginBottom="10dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sound Off"
            android:id="@+id/btnOff"
            android:background="@drawable/soundsbtn"
            android:clickable="true"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="400dp"
            android:layout_marginLeft="400dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="10dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Restart"
            android:id="@+id/restart"
            android:background="@drawable/resetbtn"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/reset"
            android:layout_alignEnd="@+id/reset"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="400dp"
            android:layout_marginRight="400dp" />

        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Reset System"
            android:id="@+id/reset"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="400dp"
            android:layout_marginRight="400dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal|right"
            android:textAlignment="center"
            android:textSize="@dimen/activity_horizontal_margin"
            android:background="@drawable/resetbtn" />

    </TableLayout>

</RelativeLayout>
